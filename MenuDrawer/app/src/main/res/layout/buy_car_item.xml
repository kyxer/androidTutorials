<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp" android:id="@+id/buy_car_item">

    <ImageView
        android:id="@+id/carImageView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:contentDescription="Car Image"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorGray"/>

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="RESERVADO"
        android:textAlignment="center"
        android:textSize="18sp"
        android:background="@color/blueR154G220B222"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/carImageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="MERCEDES BENZ CLASE C C300 SPORT"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textColor="@color/grayR98G98B98"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:includeFontPadding="false"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carImageView"
        />

    <TextView
        android:id="@+id/detailTextView"
        android:includeFontPadding="false"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="2010 | 43,313 KM | AUTOMATICA | 10.4 LT"
        android:textColor="@color/grayR173G173B173"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/nameTextView"
        app:layout_constraintRight_toLeftOf="@+id/priceTextView"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView"/>

    <TextView
        android:id="@+id/priceTextView"
        android:includeFontPadding="false"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="$ 299,999.0"
        android:textAlignment="textEnd"
        android:textColor="@color/grayR98G98B98"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="@+id/nameTextView"
        app:layout_constraintTop_toTopOf="@+id/detailTextView"/>

    <ImageButton
        android:id="@+id/deliveryButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/detailTextView"
        />

    <TextView
        android:id="@+id/deliveryTextView"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        android:background="@color/grayR234G234B234"
        android:gravity="center"
        android:text="+ENTREGA"
        android:textAlignment="center"
        android:textColor="@color/grayR187G187B187"
        app:layout_constraintRight_toLeftOf="@+id/deliveryButton"
        app:layout_constraintTop_toTopOf="@+id/deliveryButton"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/grayR234G234B234"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deliveryTextView"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="PRECIO MERCADO"
        android:textColor="@color/grayR173G173B173"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/marketPriceTextView"
        app:layout_constraintTop_toTopOf="@+id/marketPriceTextView"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="AHORRA"
        android:textColor="@color/blueR154G220B222"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintRight_toLeftOf="@+id/savingPrice"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/savingPrice"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="$20,000.00"
        android:textAlignment="textEnd"
        android:textColor="@color/blueR154G220B222"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/marketPriceTextView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/marketPriceTextView"/>

    <TextView
        android:id="@+id/marketPriceTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="$350,000.00"
        android:textAlignment="textEnd"
        android:textColor="@color/grayR173G173B173"
        android:textSize="18sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>

</android.support.constraint.ConstraintLayout>